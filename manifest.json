{
  "manifest_version": 3,
  "name": "Highlighter",
  "version": "0.1.0",
  "description": "Minimalist and open source tool to highlight text on websites",
  "permissions": [
    "contextMenus",
    "storage",
    "unlimitedStorage",
    "downloads"
  ],
  "content_scripts": [
    {
      "js": [
        "src/index.js",
        "src/uuid.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  }
}